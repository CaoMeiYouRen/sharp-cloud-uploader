{
  "name": "sharp-cloud-uploader",
  "version": "1.2.0",
  "description": "一个使用 sharp 进行图片压缩，并上传文件到 R2、S3 或 Vercel Blob 的云函数。支持 Vercel Functions/Cloudflare Workers/Docker 等方式部署。",
  "author": "CaoMeiYouRen",
  "private": true,
  "license": "MIT",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "cross-env NODE_ENV=production eslint . --fix",
    "release": "semantic-release",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production tsup",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "dev:tsup": "cross-env NODE_ENV=development tsup --watch",
    "start": "node ./dist/index.mjs",
    "start:tsx": "cross-env NODE_ENV=production tsx src/index.ts",
    "commit": "cz",
    "prepare": "husky install",
    "dev:vercel": "vercel dev",
    "deploy:vercel": "vercel",
    "dev:wrangler": "wrangler dev --env dev",
    "deploy:wrangler": "wrangler deploy"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@commitlint/cli": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.9.1",
    "@vercel/nft": "^0.27.6",
    "commitizen": "^4.3.1",
    "commitlint-config-cmyr": "^1.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog-cmyr": "^2.0.0",
    "debug": "^4.3.7",
    "eslint": "^9.36.0",
    "eslint-config-cmyr": "^2.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "semantic-release": "24.2.9",
    "semantic-release-cmyr-config": "^1.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vercel": "^39.1.0",
    "wrangler": "^3.89.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog-cmyr"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "keywords": [
    "Vercel Functions",
    "Cloudflare R2",
    "Amazon S3",
    "Docker",
    "Node.js"
  ],
  "homepage": "https://github.com/CaoMeiYouRen/sharp-cloud-uploader#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/sharp-cloud-uploader.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/sharp-cloud-uploader/issues"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.698.0",
    "@hono/node-server": "^1.13.7",
    "@vercel/blob": "^2.0.0",
    "await-to-js": "^3.0.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "file-type": "^19.6.0",
    "fs-extra": "^11.2.0",
    "hono": "^4.6.11",
    "isomorphic-unfetch": "^4.0.2",
    "lodash-es": "^4.17.21",
    "sharp": "^0.33.5",
    "tslib": "^2.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "compare-func": "^2.0.0"
    }
  },
  "type": "module"
}
